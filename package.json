{
  "name": "static-web-apps-deploy",
  "version": "1.0.0",
  "description": "This Github Action enables developers to build and publish their applications to Azure App Service Static Web Apps. This action utilizes [Oryx](https://github.com/microsoft/Oryx) to detect and build an application, then uploads the resulting application content, as well as any Azure Functions, to Azure.",
  "packageManager": "npm@10.8.1+sha512.0e9d42e92bd2318408ed81eaff2da5f78baf23ee7d12a6eed44a6e2901d0f29d7ab715d1b918ade601f72e769a824d9a5c322383f22bbbda5dd396e79de2a077",
  "engines": {
    "node": ">=18",
    "npm": ">=10"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:info && npm run build:hugo",
    "build:info": "sass --version && postcss --version && autoprefixer --version && hugo version",
    "build:hugo": "hugo --source ./test/ --verbose --forceSyncStatic --buildDrafts --buildExpired --buildFuture --cleanDestinationDir --logLevel=debug --gc --enableGitInfo",
    "start": "cd test && hugo server",
    "prepack": "npm run build",
    "format": "prettier --write ."
  },
  "files": [
    "entrypoint.sh",
    "compose.yml",
    "Dockerfile",
    "action.yml",
    "LICENSE",
    "README.md",
    "SECURITY.md",
    "package.json",
    "package-lock.json"
  ],
  "author": "Joel Van Eenwyk",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.2",
    "sass": "^1.77.6",
    "shx": "^0.3.4"
  }
}
