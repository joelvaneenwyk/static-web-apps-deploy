# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 8
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

quote_type = double

[*.{json,yaml,yml}]
indent_size = 2

[*.{scss,css}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.md]
indent_size = 1

[*.{sh,bash,zsh}]
indent_size = 2
line_ending = lf
